use Getopt::Long;
use strict;

my($USAGE) = "Usage: $0: [-u]\n";

my(%OPTIONS);
Getopt::Long::Configure("bundling", "no_ignore_case", "no_auto_abbrev", "no_getopt_compat", "require_order");
GetOptions(\%OPTIONS, 'u') || die $USAGE;


while (<>)
{
  if ($OPTIONS{'u'})
  {
    s/\&lt\;/</g;
    s/\&gt\;/>/g;
    s/\&amp\;/&/g;
  }
  else
  {
    s/\&/&amp;/g;
    s/\</&lt;/g;
    s/\>/&gt;/g;
  }
  print;
}